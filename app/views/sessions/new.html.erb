<header>
	<h1>Sign In</h1>
</header>

<%= form_tag(session_path) do %>
	<fieldset>
		<ol>
			<li class ="required">
				<%= label_tag :email %>
				<%= email_field_tag :email, nil, required: true %>
			</li>
			<li class="required">
				<%= label_tag :password %>
				<%= password_field_tag :password, nil,  size: 40, required: true %>
			</li>
		</ol>
		<p>
			Ready to join? <%= link_to 'Sign up!', signup_path %>
		</p>
		<p>
			<%= submit_tag 'Sign In' %>
		</p>
	</fieldset>
	<% end %>