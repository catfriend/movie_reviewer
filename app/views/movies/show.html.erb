<article id="movie" class="movie">
  <header>
    <%= image_for(@movie) %>
    <h1><%= @movie.title %></h1>
  </header>
  <h2>Description</h2>
  <p>
    <%= @movie.description %>
  </p>
  <h3>Rating</h3>
  <p>
    <%= @movie.rating %>
  </p>
  <h3>Released On</h3>
  <p>
    <%= @movie.released_on %>
  </p>
  <h3>Total Gross</h3>
  <p>
    <%= format_total_gross(@movie) %>
  </p>
  <h3>Cast</h3>
<p>
  <%= @movie.cast %>
</p>

<h3>Director</h3>
<p>
  <%= @movie.director %>
</p>

<h3>Written by</h3>
<p>
  <%= @movie.writer %>
</p>

<h3>Produced by</h3>
<p>
  <%= @movie.producer %>
</p>

<h3>Duration</h3>
<p>
  <%= @movie.duration %>
</p>

</article>

<nav>
<%= link_to "All Movies", movies_path %>
<%= link_to "Edit", edit_movie_path(@movie) %>
<%= link_to "Delete", movie_path(@movie), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to pluralize(@movie.reviews.size, "review"), 
            movie_reviews_path(@movie) %>
</nav>