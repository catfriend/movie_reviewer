<%= form_for(@movie) do |f| %>
<%= @movie.errors.full_messages.to_sentence %>
  <%= render "shared/errors" %>

  <fieldset>
      <ol>
      <li class="required">
        <%= f.label :title %><br/>
        <%= f.text_field :title, autofocus: true %>
      </li>
    <li class="required">
      <%= f.label :description %><br/>
      <%= f.text_area :description, cols: 40, rows: 7 %>
    </li>
    <li class="required">
      <%= f.label :rating %><br/>
      <%= f.select :rating, Movie::RATINGS, prompt: "Pick one" %>
    </li>
    <li class="required">>
      <%= f.label :released_on %>
      <%= f.date_select :released_on %>
    </li>
    <li class="required">
      <%= f.label :total_gross %>
      <%= f.number_field :total_gross %>
    </li>
    <li class="required">
    <%= f.label :cast %><br/>
    <%= f.text_field :cast %>
  </li>
  <li class="required">
    <%= f.label :director %><br/>
    <%= f.text_field :director %>
  </li>
  <li class="required">
    <%= f.label :writer %><br/>
    <%= f.text_field :writer %>
  </li>
  <li class="required">
    <%= f.label :producer %><br/>
    <%= f.text_field :producer %>
  </li>
  <li class="required">
    <%= f.label :duration %><br/>
    <%= f.text_field :duration, size: 10 %>
  </li>
  <li class="required">
    <%= f.label :image_file_name %><br/>
    <%= f.text_field :image_file_name %>
  </li>
</ol>
  <p>
    <%= f.submit %>
    <%= link_to "Cancel", movies_path %>
  </p>
  </fieldset>
  <% end %>