<%= form_for(@movie) do |f| %>
  <%= render "shared/errors", object: @movie %>

  <fieldset>
      <ol>
      <li>
        <%= f.label :title %><br/>
        <%= f.text_field :title, size: 50, autofocus: true %>
      </li>
    <li>
      <%= f.label :description %><br/>
      <%= f.text_area :description, cols: 40, rows: 7 %>
    </li>
    <li>
      <%= f.label :rating %><br/>
      <%= f.select :rating, Movie::RATINGS, prompt: "Pick one" %>
    </li>
    <li>
      <%= f.label :released_on %>
      <%= f.date_select :released_on, start_year: 1901 %>
    </li>
    <li>
      <%= f.label :total_gross %>
      <%= f.number_field :total_gross %>
    </li>
    <li>
    <%= f.label :cast %><br/>
    <%= f.text_field :cast, size: 50 %>
  </li>
  <li>
    <%= f.label :director %><br/>
    <%= f.text_field :director , size: 50%>
  </li>
  <li>
    <%= f.label :writer %><br/>
    <%= f.text_field :writer, size: 50 %>
  </li>
  <li>
    <%= f.label :producer %><br/>
    <%= f.text_field :producer, size: 50 %>
  </li>
  <li>
    <%= f.label :duration %><br/>
    <%= f.text_field :duration, size: 10 %>
  </li>
    <li>
    <%= f.collection_check_boxes(:genre_ids, Genre.all, :id, :name) %><br/>
  </li>
  <li>
    <%= f.label :image_file_name %><br/>
    <%= f.text_field :image_file_name, size: 25 %>
  </li>
</ol>
  <p>
    <%= f.submit %>
    <%= link_to "Cancel", movies_path, class: 'button' %>
  </p>
  </fieldset>
  <% end %>